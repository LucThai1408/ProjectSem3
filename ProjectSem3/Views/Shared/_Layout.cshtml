@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!doctype html>
<html lang="en-US">

<!-- Mirrored from forum2.azyrustemplates.com/ by HTTrack Website Copier/3.x [XR&CO'2014], Mon, 16 Dec 2024 07:18:26 GMT -->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1">
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Responsive HTML5 Template">
    <meta name="author" content="author.com">
    <title>MedForum</title>

    <!-- STYLESHEET -->
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800" rel="stylesheet">

    <!-- icon -->
    <link rel="stylesheet" href="/Client/fonts/icons/main/mainfont/style.css">
    <link rel="stylesheet" href="/Client/fonts/icons/font-awesome/css/font-awesome.min.css">
    <!-- Favicon -->
    <link rel="icon" href="/Client/images/logo.png" type="image/png">
    <link rel="shortcut icon" href="/Client/images/logo.png" type="image/png">
    <!-- Vendor -->
    <link rel="stylesheet" href="/Client/vendor/bootstrap/v3/bootstrap.min.css">
    <link rel="stylesheet" href="/Client/vendor/bootstrap/v4/bootstrap-grid.css">
    <!-- Custom -->
    <link rel="stylesheet" href="/Client/css/style.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .header__user-btn img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

</style>
<body>
    <!-- HEADER -->
    <header>
        <div class="header js-header js-dropdown">
            <div class="container">
                <div class="header__logo">
                    <img src="/Client/images/bieutuongCTD.jpg" alt="logo">
                    <div class="header__logo-btn" data-dropdown-btn="logo">
                        MedForum<i class="icon-Arrow_Below"></i>
                    </div>
                    <nav class="dropdown dropdown--design-01" data-dropdown-list="logo">
                        <ul class="dropdown__catalog">
                            <li><a asp-controller="Home" asp-action="Index">Home Page</a></li>
                            <li><a asp-action="GetAllPost" asp-controller="Post">Posts Page</a></li>
                            <li><a asp-action="Register" asp-controller="Account">Register Page</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="header__search">
                    <form asp-controller="Account" asp-action="Search" method="post">
                        <label>
                            <i class="icon-Search js-header-search-btn-open"></i>
                            <input type="search" placeholder="Search all doctor" name="name" value="@ViewData["SearchName"]" class="form-control">
                        </label>
                    </form>
                    <div class="header__search-close js-header-search-btn-close"><i class="icon-Cancel"></i></div>
                </div>
                <div class="header__menu">
                    <div class="header__menu-btn" data-dropdown-btn="menu">
                        Latest Topics<i class="icon-Menu_Icon"></i>
                    </div>
                    <nav class="dropdown dropdown--design-01" data-dropdown-list="menu">
                        <div>
                            <ul class="dropdown__catalog row">
                                <li class="col-xs-6"><a href="#">Postition</a></li>
                                <li class="col-xs-6"><a href="#">Level</a></li>
                                <li class="col-xs-6"><a href="#">Expertise</a></li>
                                <li class="col-xs-6"><a href="#">Experience</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
                @{
                    if (HttpContextAccessor.HttpContext.Session.GetString("FullName") != null)
                    {

                        <div class="header__user">
                            <div class="header__user-btn" data-dropdown-btn="user">
                                <img src="@HttpContextAccessor.HttpContext.Session.GetString("Avatar")" width="50" alt="avatar">
                                @HttpContextAccessor.HttpContext.Session.GetString("FullName")<i class="icon-Arrow_Below"></i>
                            </div>
                            <nav class="dropdown dropdown--design-01" data-dropdown-list="user">
                                <div>
                                    <div class="dropdown__icons">
                                        <a href="#"><i class="icon-Bookmark"></i></a>
                                        <a href="#"><i class="icon-Message"></i></a>
                                        <a asp-controller="Account" asp-action="Details"><i class="icon-Preferences"></i></a>
                                        <a asp-controller="Account" asp-action="Logout"><i class="icon-Logout"></i></a>
                                    </div>
                                </div>
                            </nav>
                        </div>

                    }
                    else
                    {
                        <div class="header__login">
                            <a asp-controller="Account" asp-action="Index" class="login-link">
                                Login
                            </a>
                        </div>
                    }
                }
            </div>
            <div class="header__offset-btn">
                <a asp-action="Create" asp-controller="Post"><img src="/Client/fonts/icons/main/New_Topic.svg" alt="New Topic"></a>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    @RenderBody()

    <!-- FOOTER -->
    <footer>
        <div class="footer js-dropdown">
            <div class="container">
                <div class="footer__logo">
                    <div>
                        <img src="/Client/images/bieutuongCTD.jpg" alt="logo">MedForum
                    </div>
                </div>
                <div class="footer__nav">
                    <div class="footer__tline">
                        <i class="icon-Support"></i>
                        <ul class="footer__menu">
                            <li><a href="#">Support</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">The Team</a></li>
                        </ul>
                        <div class="footer__language">
                            <div class="footer__language-btn" data-dropdown-btn="language">Americas - English<i class="icon-Arrow_Below"></i></div>
                            <div class="footer__language-dropdown dropdown dropdown--design-01 dropdown--reverse-y" data-dropdown-list="language">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <h3>Region</h3>
                                        <ul class="dropdown__catalog">
                                            <li class="active"><a href="#"><i></i>America</a></li>
                                            <li><a href="#"><i></i>Europe</a></li>
                                            <li><a href="#"><i></i>Asia</a></li>
                                            <li><a href="#"><i></i>China</a></li>
                                            <li><a href="#"><i></i>Australia</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-xs-6">
                                        <h3>Language</h3>
                                        <ul class="dropdown__catalog">
                                            <li class="active"><a href="#"><i></i>English</a></li>
                                            <li><a href="#"><i></i>Espanol</a></li>
                                            <li><a href="#"><i></i>Portugues</a></li>
                                            <li><a href="#"><i></i>Chinese</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="footer__bline">
                        <ul class="footer__menu">
                            <li class="footer__copyright"><span>&copy; 2017 azyrusthemes.com</span></li>
                            <li><a href="#">Teams</a></li>
                            <li><a href="#">Privacy</a></li>
                            <li><a href="#">Send Feedback</a></li>
                        </ul>
                        <ul class="footer__social">
                            <li><a href="#"><i class="fa fa-facebook-square" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-cloud" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-rss" aria-hidden="true"></i></a></li>
                        </ul>
                        <div class="footer__language-btn-m" data-dropdown-btn="language">Americas - English<i class="icon-Arrow_Below"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JAVA SCRIPT -->
    <script src="/Client/vendor/jquery/jquery.min.js"></script>
    <script src="/Client/vendor/velocity/velocity.min.js"></script>
    <script src="/Client/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

